# Simple PlotLib Docker Test
FROM alpine:latest

# Install basic tools
RUN apk add --no-cache \
    build-base \
    cmake \
    pkgconfig \
    cairo-dev \
    git

# Create working directory
WORKDIR /app

# Copy just the essential files for testing
COPY CMakeLists.txt .
COPY include/ include/
COPY src/ src/

# Simple test command
CMD ["echo", "PlotLib Docker setup is working! Alpine Linux with Cairo installed."] 